<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AjoutArticles" >

    <TextView
        android:id="@+id/stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prix"
        android:layout_centerVertical="true"
        android:text="Stock : " />

    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/prix"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="64dp"
        android:text="Nom :" />

    <TextView
        android:id="@+id/prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stock"
        android:layout_alignLeft="@+id/nom"
        android:layout_marginBottom="73dp"
        android:text="Prix : " />

    <Button
        android:id="@+id/retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/stock"
        android:layout_marginRight="38dp"
        android:layout_marginTop="92dp"
        android:text="Retour" />

    <Button
        android:id="@+id/valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/retour"
        android:layout_alignBottom="@+id/retour"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/retour"
        android:text="Valider" />

    <EditText
        android:id="@+id/editnom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nom"
        android:layout_alignBottom="@+id/nom"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/editprix1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/prix"
        android:layout_alignBottom="@+id/prix"
        android:layout_alignRight="@+id/editnom1"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editstock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/stock"
        android:layout_alignBottom="@+id/stock"
        android:layout_alignRight="@+id/editprix1"
        android:ems="10"
        android:inputType="numberSigned" />

</RelativeLayout>