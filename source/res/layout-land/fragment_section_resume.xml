<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/listViewBudget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="#000" >
                </ListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical" >

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <fr.alvini.insta.holographlib.PieGraph
                            android:id="@+id/graph"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:paddingTop="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >
                        </LinearLayout>

                        <TextView
                            android:id="@+id/Legende"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:paddingBottom="25dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="25dp"
                            android:text="Zone LÃ©gende"
                            android:textAppearance="?android:attr/textAppearance"
                            android:textColor="#ccc" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="#E7604A"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/montantRestantText"
                                style="@style/ButtonText"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingBottom="25dp"
                                android:paddingLeft="15dp"
                                android:paddingTop="25dp"
                                android:textColor="#fff"
                                android:textSize="24dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="#0FAA9A"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/montantText2"
                                style="@style/ButtonText"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingBottom="25dp"
                                android:paddingLeft="15dp"
                                android:paddingTop="25dp"
                                android:textColor="#fff"
                                android:textSize="24dp" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>